<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/study"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    tools:context="com.oms_infotech.www.gmatguru.Section">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:elevation="3dp"
            android:id="@+id/rlmaths"
            android:background="#F6F6F6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewmaths"
                    android:src="@drawable/maths"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Maths"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/textView11"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageViewmaths" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:elevation="3dp"
            android:id="@+id/rlreading"
            android:layout_below="@+id/rlmaths"
            android:background="#F6F6F6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewreading"
                    android:src="@drawable/comprehension"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Reading Comprehension"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/textView10"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageViewreading" />
            </RelativeLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:id="@+id/rlawa"
        android:layout_below="@+id/rlsentence"
        android:background="#F6F6F6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewawa"
                android:src="@drawable/writing"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AWA"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewawa" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:id="@+id/rlcritical"
        android:layout_below="@+id/rlreading"
        android:background="#F6F6F6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewcritical"
                android:src="@drawable/critical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Critical Reasoning"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView13"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewcritical" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:layout_below="@+id/rlcritical"
        android:id="@+id/rlsentence"
        android:background="#F6F6F6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewsentence"
                android:src="@drawable/correction"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sentence Correction"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView14"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewsentence" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST YOURSELF"
        android:id="@+id/button"
        android:background="#E2ffaf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>